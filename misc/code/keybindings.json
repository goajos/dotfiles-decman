// Place your key bindings in this file to override the default
[
    // unfocus search input box on escape
    {
        "key": "escape",
        "command": "runCommands",
        "args": {
            "commands": [
                    "search.action.focusNextSearchResult",
                    "cancelSelection",
                ]
            },
        "when": "inSearchEditor && searchInputBoxFocus"
    }
]